@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">
    <div class="container">
        <a class="navbar-brand d-flex me-auto" href="">
            <img src="/images/logo/SiliconRock-logo.svg" alt="" height="50px" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass("/")" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass("/about")" href="/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass("/solutions")" href="/solutions">Solutions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @GetActiveClass("/contact")" href="/contact">Contact Us</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {

    private string _currentUrl = "";

    protected override void OnInitialized()
    {
        _currentUrl = Navigation.Uri;
    }

    private string GetActiveClass(string href)
    {
        return _currentUrl.EndsWith(href, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}
